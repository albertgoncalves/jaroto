#!/usr/bin/env bash

export WD=$PWD

if [ ! -d "$WD/build" ]; then
    mkdir "$WD/build"
fi

export flags=(
    --release 8
    -g:none
    -Werror
)

runj () {
    handle=$(echo "$1" | sed 's/^[a-z\/]*\/\(.*\)\.[a-z]*$/\1/')
    clang-format -i -verbose "$1" || return
    javac "${flags[@]}" -d "$WD/build" "$WD/$1" || return
    java -cp .:"$WD/build" "$handle"
}

export -f runj
